%link{href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css", rel: "stylesheet"}/
%nav.navbar.navbar-expand-sm.bg-light
  .container-fluid
    %a.navbar-brand{href: "#"}= t('.title')
    %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNav", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav.ms-auto
        %li.nav-item
          = link_to root_path, class: "btn" do
            = t('.home')
            %i.bi.bi-house
        - if current_user
          %li.nav-item
            = link_to user_path(current_user), class: "btn" do
              = t('.profile')
              %i.bi.bi-file-person
          %li.nav-item
            = button_to destroy_user_session_path, method: :delete, class: "btn" do
              = t('.log_out')
              %i.bi.bi-box-arrow-right
        - elsif current_doctor
          %li.nav-item
            = link_to doctor_path(current_doctor), class: "btn" do
              = t('.profile')
              %i.bi.bi-file-person
          %li.nav-item
            = button_to destroy_doctor_session_path, method: :delete, class: "btn" do
              = t('.log_out')
              %i.bi.bi-box-arrow-right
        - else
          %li.nav-item
            = link_to t('.become_a_patient'), new_user_registration_path, class: "btn"
          %li.nav-item
            = link_to t('.log_in_as_patient'), new_user_session_path, class: "btn"
          %li.nav-item
            = link_to t('.log_in_as_doctor'), new_doctor_session_path, class: "btn"